{% extends 'base.html.twig' %}
{% block title %}Film{% endblock %}
{% block body %}
  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Film</h1>
  </div>

  <!-- Content Row -->
  <div class="row">
	<table class="table table-hover">
  			<thead class="thead-dark">
		    <tr>
		      <th scope="col">#</th>
		      <th scope="col">Titre</th>
		      <th scope="col">affiche</th>
		      <th scope="col">description</th>
		      <th scope="col">dur√©e</th>
		      <th scope="col">date de sortie</th>
		      <th scope="col">realisateur</th>
		      <th scope="col">acteur</th>
		      <th scope="col">categorie</th>
		      <th scope="col">nombre de bande d'annonce</th>
		      <th scope="col">nombre de photos</th>
		      <th scope="col">nombre de salles</th>
		      <th scope="col">nombre de commentaires</th>
		      <th scope="col">etat</th>
		      <th scope="col">nombre de sceances</th>


		  </thead>
		  <tbody>
		  	{% for film in films %}
		    <tr>
		      <th scope="row">{{loop.index}}</th>
		      <td>{{film.titre}}</td>
		      <td><img src="{{film.affiche}}" style="max-height: 100px" /></td>
		      <td>{{film.description}}</td>
		      <td>{{film.duree}}</td>
		      <td>{{film.dateSortie|date("m/d/Y")}}</td>
		      <td>{{film.realisateur.nom}} {{film.realisateur.prenom}}</td>
		      <td>
		      	<ul>
		      		{% for acteur in film.acteur %}
		      		<li>{{acteur.nom}} {{acteur.prenom}}</li>
		      		{% endfor %}
		      	</ul>
		      </td>
		      <td>
		      	<ul>
		      		{% for cat in film.categorie %}
		      		<li>{{categorie.titre}}</li>
		      		{% endfor %}
		      	</ul>
		      </td>
		      <td>{{film.bandeAnnonce|length}} 
