{% extends 'base.html.twig' %}
{% block title %}Film{% endblock %}
{% block body %}
{% include "base_admin.html.twig" %}
<div id="content-wrapper" class="d-flex flex-column">
  

<div class="container-fluid" style="overflow: auto; ">
  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Film</h1>
  </div>

  <!-- Content Row -->
  <div class="row">
	<table class="table table-hover">
  			<thead class="thead-dark">
		    <tr>
		      <th scope="col">#</th>
		      <th scope="col">Titre</th>
		      <th scope="col">Affiche</th>
		      <th scope="col">Description</th>
		      <th scope="col">Durée</th>
		      <th scope="col">Date de sortie</th>
		      <th scope="col">Realisateur</th>
		      <th scope="col">Acteur</th>
		      <th scope="col">Categorie</th>
		      <th scope="col">Bande annonce</th>
		      <th scope="col">Photo</th>
		      <th scope="col">Salle</th>
		      <th scope="col">Commentaire</th>
		      <th scope="col">Etat</th>
		      <th scope="col">Séance</th>
		      <th scope="col">Suppression</th>
		      <th scope="col">Modification</th>


		  </thead>
		  <tbody>
		  	{% for film in films %}
		    <tr>
		      <th scope="row">{{loop.index}}</th>
		      <td>{{film.titre}}</td>
		      <td><img src="{{film.affiche}}" style="max-height: 100px" /></td>
		      <td>{{film.description|slice(1,100)}}</td>
		      <td>{{film.duree}}</td>
		      <td>{{film.dateSortie|date("m/d/Y")}}</td>
		      <td>{{film.realisateur.nom}} {{film.realisateur.prenom}}</td>
		      <td>
		      	<ul>
		      		{% for acteur in film.acteur %}
		      		<li>{{acteur.nom}} {{acteur.prenom}} 
		      			<a href="{{path('acteurFilm_suppr',{acteur_id:acteur.id,film_id:film.id})}}"> <svg class="bi bi-trash-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
						  <path fill-rule="evenodd" d="M2.5 1a1 1 0 00-1 1v1a1 1 0 001 1H3v9a2 2 0 002 2h6a2 2 0 002-2V4h.5a1 1 0 001-1V2a1 1 0 00-1-1H10a1 1 0 00-1-1H7a1 1 0 00-1 1H2.5zm3 4a.5.5 0 01.5.5v7a.5.5 0 01-1 0v-7a.5.5 0 01.5-.5zM8 5a.5.5 0 01.5.5v7a.5.5 0 01-1 0v-7A.5.5 0 018 5zm3 .5a.5.5 0 00-1 0v7a.5.5 0 001 0v-7z" clip-rule="evenodd"/>
						</svg></a>
		      		</li>
		      		{% endfor %}
		      		<li><a href="{{path('film_acteur',{id:film.id})}}">
					<svg class="bi bi-file-earmark-plus" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
					  <path d="M9 1H4a2 2 0 00-2 2v10a2 2 0 002 2h5v-1H4a1 1 0 01-1-1V3a1 1 0 011-1h5v2.5A1.5 1.5 0 0010.5 6H13v2h1V6L9 1z"/>
					  <path fill-rule="evenodd" d="M13.5 10a.5.5 0 01.5.5v2a.5.5 0 01-.5.5h-2a.5.5 0 010-1H13v-1.5a.5.5 0 01.5-.5z" clip-rule="evenodd"/>
					  <path fill-rule="evenodd" d="M13 12.5a.5.5 0 01.5-.5h2a.5.5 0 010 1H14v1.5a.5.5 0 01-1 0v-2z" clip-rule="evenodd"/>
					</svg>
				</a></li>
		      	</ul>
		      </td>
		      <td>
		      	<ul>
		      		{% for cat in film.categorie %}
		      		<li>{{cat.titre}}
		      			<a href="{{path('categorieFilm_suppr',{categorie_id:cat.id,film_id:film.id})}}"> <svg class="bi bi-trash-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
						  <path fill-rule="evenodd" d="M2.5 1a1 1 0 00-1 1v1a1 1 0 001 1H3v9a2 2 0 002 2h6a2 2 0 002-2V4h.5a1 1 0 001-1V2a1 1 0 00-1-1H10a1 1 0 00-1-1H7a1 1 0 00-1 1H2.5zm3 4a.5.5 0 01.5.5v7a.5.5 0 01-1 0v-7a.5.5 0 01.5-.5zM8 5a.5.5 0 01.5.5v7a.5.5 0 01-1 0v-7A.5.5 0 018 5zm3 .5a.5.5 0 00-1 0v7a.5.5 0 001 0v-7z" clip-rule="evenodd"/>
						</svg></a>
		      		</li>
		      		{% endfor %}
		      		<li><a href="{{path('film_categorie',{id:film.id})}}">
					<svg class="bi bi-file-earmark-plus" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
					  <path d="M9 1H4a2 2 0 00-2 2v10a2 2 0 002 2h5v-1H4a1 1 0 01-1-1V3a1 1 0 011-1h5v2.5A1.5 1.5 0 0010.5 6H13v2h1V6L9 1z"/>
					  <path fill-rule="evenodd" d="M13.5 10a.5.5 0 01.5.5v2a.5.5 0 01-.5.5h-2a.5.5 0 010-1H13v-1.5a.5.5 0 01.5-.5z" clip-rule="evenodd"/>
					  <path fill-rule="evenodd" d="M13 12.5a.5.5 0 01.5-.5h2a.5.5 0 010 1H14v1.5a.5.5 0 01-1 0v-2z" clip-rule="evenodd"/>
					</svg>
				</a></li>
		      	</ul>
		      </td>
		      <td>{{film.bandeAnnonce|length}} 
				
		      </td>
		      <td>{{film.photo|length}}</td>
		      <td>{{film.salle|length}}</td>
		      <td>{{film.commentaire|length}}</td>
		      <td>{{film.etat}}</td>
		      <td>{{film.sceance|length}}</td>
		      <td> <a href="{{path('film_suppr',{id:film.id})}}"> <svg class="bi bi-trash-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
				  <path fill-rule="evenodd" d="M2.5 1a1 1 0 00-1 1v1a1 1 0 001 1H3v9a2 2 0 002 2h6a2 2 0 002-2V4h.5a1 1 0 001-1V2a1 1 0 00-1-1H10a1 1 0 00-1-1H7a1 1 0 00-1 1H2.5zm3 4a.5.5 0 01.5.5v7a.5.5 0 01-1 0v-7a.5.5 0 01.5-.5zM8 5a.5.5 0 01.5.5v7a.5.5 0 01-1 0v-7A.5.5 0 018 5zm3 .5a.5.5 0 00-1 0v7a.5.5 0 001 0v-7z" clip-rule="evenodd"/>
				</svg></a></td>
				<td><a href="{{path('film_modif',{id:film.id})}}"><svg class="bi bi-brush" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
				  <path d="M15.213 1.018a.572.572 0 01.756.05.57.57 0 01.057.746C15.085 3.082 12.044 7.107 9.6 9.55c-.71.71-1.42 1.243-1.952 1.596-.508.339-1.167.234-1.599-.197-.416-.416-.53-1.047-.212-1.543.346-.542.887-1.273 1.642-1.977 2.521-2.35 6.476-5.44 7.734-6.411z"/>
				  <path d="M7 12a2 2 0 01-2 2c-1 0-2 0-3.5-.5s.5-1 1-1.5 1.395-2 2.5-2a2 2 0 012 2z"/>
				</svg></a></td>
		    {% endfor %}
		  </tbody>
		</table>
	</div>
	</div>
	</div>
{% endblock %}