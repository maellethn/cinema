{% extends 'base.html.twig' %}

{% block title %}Hello CineController!{% endblock %}

{% block body %}

<div class="container-lg">

<div class="card-deck">
    {% for cat in categorie %} 
  <div class="card text-center">
    <img src="{{cat.image}}" class="card-img-top" alt="image de la categorie {{cat.titre}}">
    <div class="card-body">
      <h5 class="card-title">{{cat.titre}}</h5>
      <p class="card-text"><small class="text-muted">{{cat|length}} films dans cette categorie</small></p>
      <a href="{{path('categorie_show', {'id': cat.id})}}"type="button" class="btn btn-outline-info">Voir tous</a>
    </div>
  </div>
  {% endfor %}
</div>
</div>

{% endblock %}