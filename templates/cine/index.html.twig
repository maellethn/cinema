{% extends 'base.html.twig' %}

{% block title %}Hello CineController!{% endblock %}

{% block body %}

<div class="container-lg">    

<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" style="margin: auto">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
    {% for film in Aaffiche %}
    <li data-target="#carouselExampleCaptions" data-slide-to="{{loop.index}}"></li>
    {% endfor %}
  </ol>
  {% set premier=Aaffiche|first %}
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="{{(premier.photo|first).lien}}" alt="image du film {{premier.titre}}" class="d-block w-100" >
      <div class="carousel-caption d-none d-md-block">
        <h5>{{premier.titre}}</h5>
        <p>{{premier.duree}}</p>
        <p>{{premier.dateSortie|date("Y-m-d")}}</p>
      </div>
    </div>
    {% for film in Aaffiche|slice(1)%}
    <div class="carousel-item">
      <img src="{{(film.photo|first).lien}}" alt="image du film {{film.titre}}">
      <div class="carousel-caption d-none d-md-block">
        <h5>{{film.titre}}</h5>
        <p>{{film.duree}}</p>
        <p>{{film.dateSortie|date("Y-m-d")}}</p>
      </div>
    </div>
    {% endfor %}
  </div>
  <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>
{% endblock %}
