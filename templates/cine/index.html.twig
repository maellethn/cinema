{% extends 'base.html.twig' %}

{% block title %}Hello CineController!{% endblock %}

{% block body %}

<div class="container-lg">    
  <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" style="margin: auto">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
      {% for film in Aaffiche %}
      <li data-target="#carouselExampleCaptions" data-slide-to="{{loop.index}}"></li>
      {% endfor %}
    </ol>
    {% set premier=Aaffiche|first %}
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="{{(premier.photo|first).lien}}" alt="image du film {{premier.titre}}" class="d-block w-100" >
        <div class="carousel-caption d-none d-md-block">
          <h5>{{premier.titre}}</h5>
          <p>{{premier.duree}}</p>
          <p>{{premier.dateSortie|date("Y-m-d")}}</p>
        </div>
      </div>
      {% for film in Aaffiche|slice(1)%}
      {% if film.photo is not empty%}
      <div class="carousel-item">
        <img src="{{(film.photo|first).lien}}" alt="image du film {{film.titre}}">
        <div class="carousel-caption d-none d-md-block">
          <h5>{{film.titre}}</h5>
          <p>{{film.duree}}</p>
          <p>{{film.dateSortie|date("Y-m-d")}}</p>
        </div>
      </div>
      {% endif %}
      {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <br>
  <h2>Les films a l'affiche</h2>
  <div class="row row-cols-1 row-cols-md-3">
    {% for film in Aaffiche %} 
    <div class="col mb-4">
        
      <div class="card " >
        <img src="{{film.affiche}}" class="card-img-top" alt="image du film {{film.titre}}">
        <div class="card-body">
          <h5 class="card-title">{{film.titre}}</h5>
          <p>{{film.duree}} - {{ film.dateSortie|date("Y-m-d")}} </p>
            <p>{{film.description|slice(0,150) }} </p> 
          <p class="card-text"><small class="text-muted">Ce film est diffus√© dans {{film.salle|length}} salle(s) </small></p>
          <a href="{{path('cine_show', {'id': film.id})}}"type="button" class="btn btn-outline-info">Voir plus</a>
        </div>
      </div>
      
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
