{% extends 'base.html.twig' %}

{% block title %}Hello CineController!{% endblock %}

{% block body %}

<br>
<div class="container-lg">
    <div class="card mb-3">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="{{film.affiche}}" class="card-img" alt="image de {{film.titre}}">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">{{film.titre}}</h5>
        
            {% for i in 1..note %}
            <svg class="bi bi-star-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
            </svg>
            {% endfor %}
            {% for i in note+1..5 %}
            <svg class="bi bi-star" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.523-3.356c.329-.314.158-.888-.283-.95l-4.898-.696L8.465.792a.513.513 0 00-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767l-3.686 1.894.694-3.957a.565.565 0 00-.163-.505L1.71 6.745l4.052-.576a.525.525 0 00.393-.288l1.847-3.658 1.846 3.658a.525.525 0 00.393.288l4.052.575-2.906 2.77a.564.564 0 00-.163.506l.694 3.957-3.686-1.894a.503.503 0 00-.461 0z" clip-rule="evenodd"/>
            </svg>
            {% endfor %}
            <p>Realisateur: {{film.realisateur.nom}} {{film.realisateur.prenom}}</p>
            <p class="card-text">{{film.description}}</p>
            
            <h5 class="text-primary">
            {% for cat in film.categorie %}
                {{cat.titre}} 
                {% endfor %} 
            </h5>
            <h5 class="text-success">{{film.realisateur.nom}} - {{film.realisateur.prenom}}</h5>
          </div>
        </div>
      </div>
    </div>

    {% if film.photo is not empty %}
    <div id="carouselExampleControls" class="carousel slide mx-auto" data-ride="carousel" style="max-width: 800px;">
      <div class="carousel-inner">
        <div class="carousel-item active w-100 mx-auto">
          <img src="{{film.photo[0].lien}}" class="d-block w-100" alt="image de {{film.titre}}">
        </div>
        {% for photo in film.photo %}
        {% if not loop.first%}
        <div class="carousel-item">
          <img src="{{photo.lien}}" class="d-block w-100" alt="photo de {{film.titre}}">
        </div>
        {% endif %}
        {% endfor %}
        {% for ba in film.bandeAnnonce %}
        <div class="carousel-item">
            <iframe width="725" height="408" src="https://www.youtube.com/embed/{{ba.lien}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        {% endfor %}
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    {% endif %}
    <br>
    {% if film.acteur is not empty %}
    <h3 class="text-muted text-center">Acteurs du film</h3>
    <div class="row">
        {% for acteur in film.acteur %}
        <div class="card col" style="max-width: 300px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{acteur.photo}}" class="card-img" alt="photo de l'acteur {{acteur.nom}} {{acteur.prenom}}">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{acteur.nom}} {{acteur.prenom}}</h5>
                        <p class="card-text">cet acteur a jouer dans {{acteur.films|length}} film(s)</p>
                    </div>
                    <a href="{{path('acteur_show',{'id':acteur.id})}}" class="btn btn-outline-primary">Voir l'acteur</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% endif %}
    <br>
    {%if film.commentaire is not empty%}
    <div class= "card">
        <h3 class="text-muted text-center">Commentaires</h3>
        {% for commentaire in film.commentaire %}
        <div class="card border-warning mb-3">
            <div class="card-header">{{commentaire.pseudo}}</div>
            <div class="card-body">
                <h5 class="card-title">{{commentaire.date|date("m/d/Y")}}</h5>
                {% set note= commentaire.note%}
            {% for i in 1..note %}
            <svg class="bi bi-star-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
            </svg>
            {% endfor %}
            {% if note<5 %}
            {% for i in note+1..5 %}
            <svg class="bi bi-star" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.523-3.356c.329-.314.158-.888-.283-.95l-4.898-.696L8.465.792a.513.513 0 00-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767l-3.686 1.894.694-3.957a.565.565 0 00-.163-.505L1.71 6.745l4.052-.576a.525.525 0 00.393-.288l1.847-3.658 1.846 3.658a.525.525 0 00.393.288l4.052.575-2.906 2.77a.564.564 0 00-.163.506l.694 3.957-3.686-1.894a.503.503 0 00-.461 0z" clip-rule="evenodd"/>
            </svg>
            {% endfor %}
            {% endif %}
                <p class="card-text">{{commentaire.commentaire}}</p>
             </div>
        </div>
        {% endfor %}
    </div>
    {% endif %}

</div>

    
{% endblock %}